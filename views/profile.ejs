<!doctype html>
<html>
<head>
  <title>clothesDB</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:2%; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
    <div class="jumbotron text-center">
        <h1>Account Information</h1>
    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="well">
              <h3><span class="fa fa-user"></span> Local</h3>
              <% if (user.local.email) { %>
                  <p>
                      <strong>id</strong>: <%= user._id %><br>
                      <strong>username</strong>: <%= user.local.username %><br>
                      <strong>email</strong>: <%= user.local.email %><br>
                      <strong>password</strong>: <%= user.local.password %><br>
                      <strong>apikey</strong>: <%= user.local.apikey %>
                  </p>
                  <a href="/unlink/local" class="btn btn-default">Unlink</a>
              <% } else { %>
                  <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>
          </div>
      </div>
      <div class="row">
        <a href="/home" class="btn btn-default btn-lg  col-md-6">Home</a>
        <a href="/logout" class="btn btn-default btn-lg col-md-6">Logout</a>
      </div>
</div>
</body>
</html>
